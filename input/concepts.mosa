use mosa->std->[format->fmt, stdin, stdout->printLn];

fn main() {
    let [name, age]: [str, num~>i32] = stdin.read(2)|>[str, num];

    if age < 5 -> printLn("I'm not sure you can even use this program at that age");
    else -> printLn(
        fmt("Hi, {name}!. You are {age} years old.")
    );
}


